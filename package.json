{
    "name": "nh-config-editor",
    "private": true,
    "packageManager": "pnpm@6.11.0",
    "version": "0.7.0",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "settings-schema": "ts-json-schema-generator -f tsconfig.json -p src/Common/AppData/Settings.ts -t Settings -o src/Common/AppData/SettingsSchema.json --no-type-check --minify true && prettier --write ./src/Common/AppData/SettingsSchema.json",
        "proj-settings-schema": "ts-json-schema-generator -f tsconfig.json -p src/Common/Project.ts -t ProjectSettings -o src/Common/ProjectSettingsSchema.json --no-type-check --minify true && prettier --write ./src/Common/ProjectSettingsSchema.json",
        "schema": "pnpm settings-schema && pnpm proj-settings-schema",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "react-devtools": "react-devtools",
        "redux-devtools": "redux-devtools --open",
        "lint": "eslint src/**/*.ts src/**/*.tsx",
        "lint-fix": "eslint src/**/*.ts src/**/*.tsx --fix",
        "prettify": "prettier --write .",
        "lint-prettify": "pnpm lint && pnpm prettify",
        "prepare": "husky install",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "webstorm-integration": "vitest --watch --reporter=dot --reporter=json --outputFile=.vitest-result.json"
    },
    "dependencies": {
        "@monaco-editor/react": "^4.4.5",
        "@popperjs/core": "^2.11.6",
        "@reduxjs/toolkit": "^1.8.5",
        "@rjsf/core": "^4.2.3",
        "@tauri-apps/api": "^1.1.0",
        "bootstrap": "^5.2.1",
        "jsonpath-plus": "^7.2.0",
        "monaco-editor": "^0.33.0",
        "react": "^18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-bootstrap-icons": "^1.8.4",
        "react-color": "^2.19.3",
        "react-dom": "^18.2.0",
        "react-hotkeys-hook": "^3.4.7",
        "react-jsonschema-form": "^1.8.1",
        "react-redux": "^8.0.2",
        "sortablejs": "^1.15.0",
        "vscode-json-languageservice": "^5.1.0"
    },
    "devDependencies": {
        "@redux-devtools/cli": "^1.0.7",
        "@tauri-apps/cli": "^1.1.1",
        "@testing-library/react": "^13.4.0",
        "@types/json-schema": "^7.0.11",
        "@types/react": "^18.0.20",
        "@types/react-bootstrap": "^0.32.30",
        "@types/react-color": "^3.0.6",
        "@types/react-dom": "^18.0.6",
        "@types/sortablejs": "^1.15.0",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "@vitejs/plugin-react": "^1.3.2",
        "@vitest/ui": "^0.20.3",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-react": "^7.31.8",
        "husky": "^8.0.1",
        "jsdom": "^20.0.0",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "react-devtools": "^4.26.0",
        "remote-redux-devtools": "^0.5.16",
        "sass": "^1.54.9",
        "ts-json-schema-generator": "^1.0.0",
        "typescript": "^4.8.3",
        "vite": "^2.9.15",
        "vite-plugin-html": "^3.2.0",
        "vite-plugin-string": "^1.1.2",
        "vitest": "^0.20.3"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx}": "eslint src/**/*.ts src/**/*.tsx --cache --fix",
        "*.{js,ts,jsx,tsx,css,md,yml,yaml,json}": "prettier --write ."
    }
}
